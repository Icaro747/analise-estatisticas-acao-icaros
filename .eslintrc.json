{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-plusplus": "off",
        "arrow-body-style": "off",
        "react/react-in-jsx-scope": "off",
        "import/prefer-default-export": "off",
        "react/function-component-definition": "off",
        "jsx-a11y/label-has-associated-control": "off"
    }
}